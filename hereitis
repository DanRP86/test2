import textwrap

def boom_banner():
    msg = textwrap.dedent("""
    ðŸ’¥ BOOM (Simulated) ðŸ’¥

    This was harmless. In the real world, blindly copy-pasting and executing unknown code
    could exfiltrate data, steal tokens, or encrypt files.

    âœ… Lesson:
    - Review code before executing.
    - Run unknown code in a sandbox or notebook with limited permissions.
    - Check for secrets usage and outbound calls.
    """)
    print(msg)

# Encoded hint: numbers represent ASCII codes
encoded_hint = [80, 114, 111, 99, 101, 101, 100, 32, 116, 111, 32, 47, 115, 116, 97, 103, 101, 45, 52, 32, 97, 110, 100, 32, 102, 105, 120, 32, 98, 117, 103, 103, 121, 95, 97, 112, 112, 46, 112, 121]

def safe_hint():
    print("\n--- SAFE PATH ---")
    decoded = ''.join(chr(n) for n in encoded_hint)
    print(f"Your next hint: {decoded}")

if __name__ == "__main__":
    print("BOOM")
    boom_banner()
    safe_hint()
