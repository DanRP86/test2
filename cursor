$env:JUPYTER_CONFIG_DIR = "$env:APPDATA\jupyter"
$env:JUPYTER_DATA_DIR   = "$env:APPDATA\jupyter"
$env:JUPYTER_RUNTIME_DIR= "$env:LOCALAPPDATA\jupyter\runtime"
New-Item -ItemType Directory $env:JUPYTER_CONFIG_DIR -ea SilentlyContinue | Out-Null
New-Item -ItemType Directory $env:JUPYTER_DATA_DIR   -ea SilentlyContinue | Out-Null
New-Item -ItemType Directory $env:JUPYTER_RUNTIME_DIR- ea SilentlyContinue | Out-Null

